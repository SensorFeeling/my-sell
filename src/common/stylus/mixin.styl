border-1px($color)
  position: relative //对当前元素的定位
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-after-1px($color)
  position: relative //对当前元素的定位
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
border-before-1px($color)
  position: relative //对当前元素的定位
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-bottom: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none
border-before-none()
  &:before
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
